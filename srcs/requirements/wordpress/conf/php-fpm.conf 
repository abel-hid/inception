[www]

; Listen directive defines the address and port on which PHP-FPM listens for connections.
listen = /var/run/php/php7.4-fpm.sock

; The user and group directives set the UNIX user and group that the PHP-FPM process will run as.
user = www-data
group = www-data

; The number of child processes to be created when PHP-FPM is started.
pm = dynamic
pm.max_children = 5
pm.start_servers = 2
pm.min_spare_servers = 1
pm.max_spare_servers = 3

; The location of the PHP-FPM error log file.
; Default value is /var/log/php7.4-fpm.log
; error_log = /var/log/php7.4-fpm.log

; Set the timezone.
; Default value is UTC.
; Set this according to your timezone.
; date.timezone = "UTC"
